extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/sell", method="post", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="name" required) 
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="details") Details
          .col-xs-12.col-sm-10
            input#name.form-control(name="details" required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="feature") Feature
          .col-xs-12.col-sm-10
            input#name.form-control(name="feature" required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="screentype") Screentype
          .col-xs-12.col-sm-10
            input#name.form-control(name="screentype" required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="screensize") Screensize
          .col-xs-12.col-sm-10
            input#name.form-control(name="screensize" required)
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="screenratio") Screenratio
          .col-xs-12.col-sm-10
            input#name.form-control(name="screenratio" required)
        button.btn.btn-primary.pull-right Add Mobile
    .col-xs-12.col-md-4